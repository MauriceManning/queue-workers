<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <!--   READ: http://docs.spring.io/spring-framework/docs/current/spring-framework-reference/htmlsingle/#overview-logging-slf4j  -->
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
        </Console>
        <!--<File name="MyFile" fileName="proto.log" immediateFlush="false" append="false">-->
            <!--<PatternLayout pattern="%d{yyy-MM-dd HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>-->
        <!--</File>-->
    </Appenders>
    <Loggers>
        <Root level="info">  <!-- use trace for perf monitoring -->
            <AppenderRef ref="Console" />
            <!--<AppenderRef ref="MyFile"/>-->
        </Root>
    </Loggers>
</Configuration>